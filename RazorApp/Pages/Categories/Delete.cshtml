@page
@model RazorApp.Pages.Categories.Delete


<form method="post" class="form-horizontal">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <h2 class="text-primary">Delete Category</h2>
        <hr>
    </div>
    <div asp-validation-summary="All"></div>
    <fieldset>
        <div class="form-group">
            <label asp-for="Category.Name" class="col-lg-2 control-label p-0"></label>
            <div class="col-lg-10">
                <input asp-for="Category.Name" disabled class="form-control" placeholder="Category Name">
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Category.DisplayOrder" class="col-lg-2 control-label"></label>
            <div class="col-lg-10">
                <input asp-for="Category.DisplayOrder" disabled class="form-control" placeholder="Category Order">
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-page="/Categories/Index" class="btn btn-secondary">
                    Back to List
                </a>
            
            </div>
        </div>
    </fieldset>
</form>