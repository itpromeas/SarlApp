@page
@model RazorApp.Pages.Categories.Create


<form method="post">
    <div class="container">
        <h2 class="text-primary">Create Category</h2>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="mb-3 mt-3">
        <label asp-for="Category.Name" class="form-label"></label>
        <div class="col-lg-10">
            <input asp-for="Category.Name" class="form-control" placeholder="Category Name">
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
    </div>

    <div class="mb-3 mt-3">
        <label asp-for="Category.DisplayOrder" class="form-label"></label>
        <div class="col-lg-10">
            <input asp-for="Category.DisplayOrder"  class="form-control" placeholder="Category Order">
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
    </div>
    
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Create</button>
            <a asp-page="/categories/index" class="btn btn-secondary">
                Back to List
            </a>
    </div>
</form>

@section Scripts{
    @{
    <partial name="_ValidationScriptsPartial"/>
    }
}
