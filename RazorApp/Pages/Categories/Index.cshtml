@page
@model RazorApp.Pages.Categories.Index
@{
   
}


<div class="container">
    <div class="row pt-0">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="/Categories/Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>  Create New Category
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped">
     <thead>
        <tr>
            <th> Category Name </th>
            <th> Display Order </th>
            <th> Edit </th>
        </tr>
     </thead>

     <tbody>
        @foreach(var item in Model.CategoryList.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td>@item.Name</td>
                <td> @item.DisplayOrder </td>
                <td>
                    <a asp-page="/Categories/Edit" asp-route-id="@item.Id" class="btn btn-info mx-2">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-page="/Categories/Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i> Delete
                    </a>
                </td>
            </tr>
        }
     </tbody>
    
 </table>